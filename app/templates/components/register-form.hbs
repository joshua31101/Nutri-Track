<form {{action "submit" on="submit"}} method="POST">
  <div class="form-group">
    {{input type="email" name="email" class="form-control" placeholder="Email" value=user.email}}
  </div>
  <div class="form-group">
    {{input type="password" name="password" class="form-control" placeholder="Password" value=user.password}}
  </div>
  <div class="form-group">
    {{input type="password" name="confirm_password" class="form-control" placeholder="Confirm password" value=password_confirm}}
  </div>
  <button type="submit" class="btn btn-primary w-100 mt-3">Submit</button>
</form>

{{#if errors}}
  {{#each errors as |error|}}
    <div class="alert alert-danger mt-3" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}
